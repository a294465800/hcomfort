/**index.wxss**/

.container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(#60b2d7, #447093);
  padding: 20rpx 0 40rpx;
}

/*logo*/

.logo {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}

.logo_img {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.logo_title {
  color: #fff;
  font-size: 34rpx;
}

/*表单*/

.place_input {
  font: normal 30rpx "微软雅黑";
}

.form {
  width: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

form {
  flex: 1;
  width: 100%;
}

.input {
  background-color: #d0e1e9;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
  width: 86%;
  margin: 0 auto 30rpx;
}

input {
  flex: 1;
  padding-left: 30rpx;
}

.input_type {
  color: #1a477e;
  border-right: 4rpx solid #1a477e;
  padding-right: 20rpx;
  min-width: 160rpx;
  text-align: justify;
  text-align-last: justify;
  height: 50rpx;
}

.input_type::after {
  display: inline-block;
  content: '';
  overflow: hidden;
  width: 100%;
  height: 0;
}

radio-group {
  flex: 1;
  text-align: center;
}

label {
  margin: 40rpx;
}

radio {
  transform: scale(0.8);
}

/*多选制作*/

.checkbox_input {
  background-color: #d0e1e9;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  padding: 20rpx;
  width: 86%;
  margin: 0 auto 30rpx;
}

.checkbox_input_type {
  display: inline-block;
  color: #1a477e;
  border-right: 4rpx solid #1a477e;
  padding-right: 20rpx;
  min-width: 160rpx;
  height: 50rpx;
}

.checkbox {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: #1a477e;
  padding: 10rpx;
  border-radius: 6rpx;
  border: 2rpx solid #1a477e;
}

.checkbox_icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

checkbox-group {
  display: inline-block;
}

.checkbox_input label {
  display: inline-block;
  margin: 0;
  margin-bottom: 20rpx;
}

.choose {
  background: linear-gradient(#3d97cc, #1a5784);
  color: #fff;
}

/*提交*/

.submit {
  color: #1a477e;
  width: 80%;
  box-shadow: 4rpx 4rpx 2rpx #1a5784;
}

.QRcode_img {
  width: 400rpx;
  height: 400rpx;
  background-color: #fff;
  margin-top: 60rpx;
}
